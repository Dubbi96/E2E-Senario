{
  "manifest_version": 3,
  "name": "Dubbi E2E Recorder (MVP)",
  "version": "0.1.0",
  "description": "Record browser actions and assertions, upload to Dubbi E2E service as a scenario.",
  "action": {
    "default_title": "Dubbi Recorder",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "cookies", "downloads"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}


