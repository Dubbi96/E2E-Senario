{
  "base_url": "https://hogak.live",
  "requires_auth": false,
  "_meta": {
    "source": "xlsx: NAV-03",
    "note": "비회원 접근 제한 정책이 동작하는지(로그인 유도 UX) 확인합니다."
  },
  "steps": [
    {
      "type": "go",
      "url": "https://hogak.live/main",
      "delay_ms": 1200
    },
    {
      "type": "wait_visible",
      "text": "경기일정",
      "timeout": 15000
    },
    {
      "type": "ensure_logged_out",
      "selector": "#btnUser",
      "logged_out_text": "로그인"
    },
    {
      "type": "go",
      "url": "https://hogak.live/vod",
      "delay_ms": 1200
    },
    {
      "type": "wait_visible",
      "text": "VOD",
      "timeout": 15000
    },
    {
      "type": "click",
      "selectors": [
        "a[href*='/vod/']:first-child",
        ".vod-item:first-child",
        ".result-item:first-child a"
      ]
    },
    {
      "type": "wait_visible",
      "text": "로그인 하세요!",
      "timeout": 15000
    },
    {
      "type": "screenshot",
      "name": "guest_login_gate"
    }
  ]
}


